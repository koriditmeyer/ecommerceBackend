<div class="flex flex-row md:flex-row py-8 align-center justify-center">
    <div class="md:w-1/3 w-full mb-4 md:mb-0 px-4 flex-col justify-center">
        <img alt="Product Image" class="object-cover object-center rounded  max-h-52 " src="{{this.product.thumbnail.[0]}}">
    </div>
    <div class="md:w-2/3 w-full px-4">
        <h2 class="text-2xl font-medium text-gray-900 title-font mb-2">{{this.product.title}}</h2>
        <span class="font-semibold title-font text-gray-700">{{this.product.code}}</span>
        <p class="leading-relaxed">{{this.product.description}}</p>
        <p class="text-indigo-500  mt-4">Quantity {{this.quantity}}
            <p />
        <p class="text-red-500  mt-4">Price ${{this.product.price}}
            <p />
    </div>
</div>
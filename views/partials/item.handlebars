<div class="lg:w-1/4 md:w-1/2 p-4 w-full">
    <a class="block relative h-48 rounded overflow-hidden" href="product/{{this._id}}">
        <img alt="ecommerce" class="object-cover object-center w-full h-full block" src="{{this.thumbnail.[0]}}">
    </a>
    <div class="mt-4">
        <h3 class="text-gray-500 text-xs tracking-widest title-font mb-1">{{this.category}}</h3>
        <h2 class="text-gray-900 title-font text-lg font-medium">{{this.title}}</h2>
        <p class="mt-1">${{this.price}}</p>
    </div>
</div>